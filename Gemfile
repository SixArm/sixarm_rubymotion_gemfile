source 'https://rubygems.org'

#-------------------------------------------------------------------------
# Dependencies
#-------------------------------------------------------------------------

gem 'motion-cocoapods', '>= 1.5.0', '< 2'  # Cocoapods package manager for native libraries 
gem 'motion-bundler', '>= 0.2.1', '< 1'  # Require RubyMotion-unaware gems.
gem 'motion-require', '>= 0.2.0', '< 1'  # Dependency management for RubyMotion using a pseudo `require`
gem 'motion-testflight', '>= 1.5.2', '< 2'  # Embed the TestFlight SDK for beta-testing.

#-------------------------------------------------------------------------
# Extensions
#-------------------------------------------------------------------------

gem 'bubble-wrap', '>= 1.7.0', '< 2'  # Many helpers that make Cocoa APIs more like Ruby.
gem 'geomotion', '>= 0.15.0', '< 2'  # Better iOS geometry helpers for frames, bounds, rects.
gem 'memoist', '> 0'  # Memoize method calls for speed.
gem 'motion-i18n', '>= 0.0.2', '< 2'  # Internationalization methods.
gem 'motion-map', '>= 0.0.4', '< 9'  # A hash map with ordering, indifferent access, and more.
gem 'motion-social', '>= 0.3', '< 1'  # RubyMotion wrapper around Apple iOS Social Framework.
gem 'motion-support', '>= 0.2.6', '< 1'  # Useful extensions to standard lib, ported from ActiveSupport.
gem 'motion-yaml', '>= 1.2', '< 2'  # Methods to access YAML.

#-------------------------------------------------------------------------
# Models
#-------------------------------------------------------------------------

gem 'motion_model', '>= 0.5.4', '< 2' # Mixins for models, find, validations, and relations.

#-------------------------------------------------------------------------
# Views
#-------------------------------------------------------------------------

gem 'formotion', '>= 1.8', '< 2'  # Quickly create forms and settings pages.
gem 'motion-awesome', '> 0', '< 9'  # Use Font Awesome iconic font.

#-------------------------------------------------------------------------
# Development & Test
#-------------------------------------------------------------------------

group :development, :test do
  gem 'rake', '>= 10.3.2', '< 11'  # Run tasks and dependencies.
  gem 'motion-stump', '>= 0.3.2', '< 1'  # Stubbing and mocking for testing.
  gem 'motion-juxtapose', '>= 0.1.1', '< 1'  # Screenshot-driven testing using ImageMagick.
  gem 'motion-frank', '>= 1.2.2.0', '< 2'  # Use frank-cucumber integration testing framework.
end

#-------------------------------------------------------------------------
# Production
#-------------------------------------------------------------------------

group :production do
end
